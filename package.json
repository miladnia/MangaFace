    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "http-server": "^14.1.1",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.6",
    "yaml": "^2.8.1"

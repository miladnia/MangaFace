{
  "name": "mangaface-web-client",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && NODE_ENV=production npm run setup && tsc -b && vite build",
    "lint": "eslint .",
